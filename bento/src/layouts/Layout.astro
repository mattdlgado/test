---
import '@fontsource/space-mono';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Mattdlgado components page" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--h: 0;
		--s: 0%;
		--ll: 89%;
		--ld: 3%;
		--bg: hsl(var(--h) var(--s) var(--ld));
		--text: hsl(var(--h) var(--s) var(--ll));
		--al: hsl(var(--h) var(--s) var(--ll) / 0.25);
		--ad: hsl(var(--h) var(--s) var(--ld) / 0.25);
		--sl: hsl(0 0% 100% / 0.5);
		--sd: hsl(0 0% 0% / 0.1);
		font-size: 16px;
		--base: 21px;
	}

	body {
		margin: var(--base);
		min-width: 280px;
		background-color: var(--bg);
		font-family: 'Space Mono', monospace;
		font-size: 1rem;
		line-height: 1.6;
		color: var(--text);
	}
</style>
